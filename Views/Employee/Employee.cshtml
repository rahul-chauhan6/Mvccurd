@model MVCCURD.Models.empmodel

<style>
   .form-group{
       background-color:hotpink;
       text-align:center;
       padding-left:6%;
   }
  
</style>
<h1 class="text-capitalize text-center">Register here</h1>
@using (Html.BeginForm("Employee", "Employee", FormMethod.Post))
{

<div class="container">
    <div class="card">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-group">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(m => m.id, new { @class = "form-control", })

                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })

                    </div>

                    <div class="form-group">
                        <label>Mobile</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @required = "required" })

                    </div>

                    <div class="form-group">
                        <label>Salary</label>
                        @Html.TextBoxFor(m => m.salary, new { @class = "form-control", @required = "required" })

                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">submit</button>
                </div>

            </div>
        </div>
    </div>
</div>
}



